<div class="main">
    <div class="row">
    <h2>Reservation List</h2>
    <%= button_to "Add New", new_reservation_path, method: 'get', class: "btn btn-default btn-primary" %>
    </div>
    <div class="container-fluid">
        <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Name</th>
                <th>Party Size</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Notes</th>
            </tr>
            </thead>
            <% @users.each do |u| %>
                <% u.reservations.each do |r| %>
                    <tr>
                    <td><%= r.date %></td>
                    <td><%= r.time.to_formatted_s(:time) %></td>
                    <td><%= r.name %></td>
                    <td><%= r.party_size %></td>
                    <td><%= r.phone_num %></td>
                    <td><%= r.email %></td>
                    <td><%= r.special_requests %></td>
                    <td>
                        <%= button_to "Edit", edit_reservation_path(r), method: 'get', class: "btn btn-default btn-primary" %>
                    </td>
                    <td>
                        <%= button_to 'Delete', reservation_path(r), method: 'delete', class: "btn btn-default btn-primary" %>
                    </td>
                    </tr>
                <% end %>
            <% end %>
        </table>
        </div> 
    </div>
</div>