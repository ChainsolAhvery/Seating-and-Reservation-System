<div class="main">
	<%= button_to "Back to Reservations", reservations_path, method: 'get', class: "btn btn-default btn-primary" %><br>
	<h2>Create Reservation</h2>
	<div class="container-fluid">
		<div class="col-md-12">
		<label for="name">Account Name: <%= @customer.f_name + " " + @customer.l_name%></label><br>
		<label for="email">Email Address: <%= @customer.email %></label>
		<%= form_for @reservation do |f| %>
			<p>Reservation Name:<br> <%= f.text_field :name, required: true %></p>
			<p>Email:<br> <%= f.text_field :email, required: true %></p>
			<p>Phone Number (No dashes):<br> <%= f.text_field :phone_num, required: true %></p>
			<p>Reservation Date:<br> <%= f.date_field :date, min: Date.today, required: true %></p>
			<p>Reservation Time:<br> <%= f.time_select :time, include_seconds: false  %></p>
			<p>Party Size:<br> <%=f.number_field :party_size, required: true, min: 1 %></p>
			<p>Special Requests:<br> <%=f.text_area :special_requests %></p>
			<%= f.submit %>
		<% end %>
		</div>
	</div>
</div>
